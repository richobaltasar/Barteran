@{
    ViewData["Title"] = "Home Page";
}

@model HomeModel
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto">
<style type="text/css">
    #circle {
        background: #8E4586;
        border-color: #904588DB;
        border-radius: 50%;
        width: 180px;
        height: 180px;
        margin: 0 auto;
    }

    .shadow {
        -moz-box-shadow: 3px 3px 5px 6px #ccc;
        -webkit-box-shadow: 3px 3px 5px 6px #ccc;
        box-shadow: 3px 3px 5px 6px #ccc;
    }

    .title {
        font-family: 'Segoe UI';
        font-size: 14px;
        color: white;
        padding-top: 80px;
        padding-left: 20px;
        padding-right: 20px;
        text-align: center;
        padding-bottom: 120px;
    }

    .Logo {
        font-family: 'Segoe UI';
        font-size: 28px;
        font-weight: bold;
        color: white;
        text-align: center;
        padding-top: 60px;
    }

    .background-header {
        max-height: 410px;
        width: auto;
        background-color: #7A2771BD;
    }

    .sub-title {
        color: #8E4586;
        font-size: 17px;
        text-align: center;
        padding-top: 34px;
        font-family: 'Segoe UI';
        font-weight: normal;
    }

    .Account-Lain {
        align-content: center;
        text-align: center;
        min-height:120px;
    }

    #footer {
        position: fixed;
        bottom: 0;
        width: 100%;
        height: 80px; /* Height of the footer */
        padding-top: 0px;
        padding-bottom: 0px;
        background-color: white;
    }

        #footer hr {
            background-color: #7A2771BD;
            height: 6px;
            margin-top: 0px;
            margin-bottom: 5px;
        }

        #footer p {
            float: left;
            color: #8E4586;
            margin-left: 10px;
            font-family: 'Segoe UI';
            font-weight: normal;
            font-size: 12px;
            max-width: 250px;
            padding: 10px 10px 10px 10px;
        }

        #footer a {
            background-color: #8E4586ED;
            text-align: center;
            color: white;
            margin: 10px 10px 0px 10px;
            padding: 10px 10px 10px 10px;
            float:right;

        }
</style>
@if (Model.Error == null)
{
    if (ViewBag.device == "smartphone")
    {
        <div class="background-header">
            <p class="title">
                Hi, Anda baru saja menginstal Aplikasi Sosial Nusantara Maju dengan ini kita tidak terlalu bergantung dengan kertas, barang kita yang miliki bisa buat beli beras atau bisa tukar tukaran yang jaman dulu ribet, sekarang jadi mudah, asyik lah pokok nya ...
            </p>
        </div>
        <div id="circle" class="shadow" style="margin-top:-106px;">
            <h1 class="Logo">BARTERAN</h1>
            <hr style="margin-left:20px;margin-right:20px;background-color:white;height:7px;" />
        </div>

        <p class="sub-title">Bisa login pake akun Sosmed kamu ya guys</p>
        <div class="Account-Lain">
            <img src="~/Images/google/google.png" />
            <img src="~/Images/facebook/1200px-Facebook_Icon_(Single_Path_-_Transparent__f_).svg.png" />
            <img src="~/Images/LinkedIn/58e91afdeb97430e81906504.png" />
        </div>

        <div id="footer">
            <hr />
            <p>
                atau males mau liat dulu aja tanpa daftar bias tenang klik ini aja
            </p>
            <a class="btn shadow" href="@Url.Action("HartaAwal","Home")">
                Masuk
            </a>
        </div>
    }
    else
    {
        <p>
            sorry belom support untuk laptop screen
        </p>
    }
}
else
{
    @await Html.PartialAsync("Error", Model.Error)
}
